@{
    ViewData["Title"] = "Home Page";
}

<style>
    * {
        margin: 0;
        padding: 0;
    }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        font-family: 'Century Gothic';
        font-size: 17px;
        color: #fff;
        line-height: 1.6;
        background: #1B1B1B;
    }

    #showcase {
        background-image: url(/Content/HomePage/HomeBackground.jpg);
        background-size: cover;
        background-position: center;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        padding: 0 20px;
    }

        #showcase h1 {
            font-size: 50px;
            line-height: 1.2;
        }

        #showcase p {
            font-size: 20px;
        }

        #showcase .button {
            font-size: 18px;
            text-decoration: none;
            color: #fff;
            border: #fff 1px solid;
            padding: 10px 20px;
            border-radius: 10px;
            margin-top: 20px;
        }

        #showcase .button:hover {
                background: #fff;
                color: #000;
        }

/*    #section-a {
        padding: 20px;
        background: #fff;
        color: #000;
    }

    #section-b {
        padding: 20px;
        background: #fff;
        color: #000;
    }*/

    #section-icons {
        display: flex;
        width:100vw;
        height:100%;
        justify-content: center;
        align-items: center;
        text-align: center;
    }
        #section-icons div {
            width: 100vw;
        }

        #section-icons .box1, #section-icons .box3 {
            background: #000;

        }

        #section-icons .button {
            font-size: 18px;
            text-decoration: none;
            color: #fff;
            border: #fff 1px solid;
            padding: 10px 20px;
            border-radius: 10px;
            margin-top: 20px;
        }
    
        #section-icons p{
            margin-top:30px;
            font-size:20px;
            margin-left:30px;
            margin-right:30px;
        }

        #section-icons .button:hover {
                background: #fff;
                color: #000;
        }
        #section-icons img{
            width:20%;
            height:20%;
            display:block;
            margin-left:auto;
            margin-right:auto;
            padding: 20px 0 20px 0;
        
        }
  
    

</style>



<header id="showcase">
    <h1>Welcome to the CarWise</h1>
    <p>The simplest & fastest way to rent a car online</p>
    <a href="#section-icons" class="button">Read More</a>


</header>

<section id="section-icons">
    <div class="box1">
        <img src="~/Content/HomePage/faq.png" alt="faq_image">
        <a asp-action="Faq" class="button">FAQ</a>
        <p>You will find answers to the most frequently asked questions here</p>

    </div>
    <div class="box2">
        <img src="~/Content/HomePage/car.png" alt="car_image">
        <a asp-action="Rental" class="button">Rent a car</a>
        <p>Choose the model, brand and the most suitable date for you, and we will take care of the rest.</p>
    </div>
    <div class="box3">
        <img src="~/Content/HomePage/services.png" alt="services_image">
        <a asp-action="Services" class="button">Services</a>
        <p>Website management panel, intended for our administration only</p>
    </div>
</section>

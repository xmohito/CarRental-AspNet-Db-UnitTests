@{
    ViewData["Title"] = "Panel";
}

<link rel="stylesheet" href="~/css/rent/delete.css" asp-append-version="true" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins&display=swap">
@model CarWise.Models.Rental

@{
    ViewData["Title"] = "Delete Rental";
}

<h1 class="text-white">@ViewData["Title"]</h1>

<h3 class="text-white">Are you sure you want to delete this rental?</h3>
<div class="container">
    <h4 class="text-white">Rental</h4>
    <hr class="text-white" />
    <dl class="row">
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.IdCustomer)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.IdCustomer)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.IdCar)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.IdCar)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.ReceiptDate)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.ReceiptDate)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.ReturnDate)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.ReturnDate)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.ToPay)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.ToPay)
        </dd>
        <dt class="col-sm-2 text-white">
            @Html.DisplayNameFor(model => model.Pay)
        </dt>
        <dd class="col-sm-10 text-white">
            @Html.DisplayFor(model => model.Pay)
        </dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="text-white">Back to List</a>
        </div>
    </form>
</div>
